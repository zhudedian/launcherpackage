<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ider.launcherpackage"
    >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.FORCE_STOP_PACKAGES"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <application
        android:name=".launcher.LauncherApplication"
        android:allowBackup="true"
        android:directBootAware="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".launcher.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
<category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity android:name=".launcher.FolderActivity"
                  android:launchMode="singleTask"/>
        <activity android:name=".launcher.AppListActivity"
                  android:launchMode="singleTask"/>
        <activity android:name=".clean.CleanActivity"
                  android:theme="@android:style/Theme.Translucent"
                  android:launchMode="singleTask"/>
        <activity android:name=".launcher.SportsActivity"
                  android:launchMode="singleTask">
        </activity>
        <activity android:name=".launcher.KaraokeActivity"
                  android:launchMode="singleTask">
        </activity>
        <activity android:name=".launcher.MovieActivity"
                  android:launchMode="singleTask">
        </activity>
        <activity android:name=".launcher.HelpActivity"
                  android:launchMode="singleTask">
        </activity>
        <activity android:name=".launcher.VipActivity">
        </activity>
    </application>

</manifest>