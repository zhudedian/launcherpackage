<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#a1000000">

        <TextView
            android:id="@+id/shortcut_edit_replace"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/shortcut_edit_replace"
            android:textSize="20sp"
            android:gravity="center"
            android:focusable="true"
            android:background="@drawable/shortcut_edit_replace_background"/>
        <TextView
            android:id="@+id/shortcut_edit_delete"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/shortcut_edit_delete"
            android:textSize="20sp"
            android:gravity="center"
            android:focusable="true"
            android:background="@drawable/shortcut_edit_delete_background"/>

</LinearLayout>