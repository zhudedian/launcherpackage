<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ider.launcherpackage.launcher.MainActivity"
    android:id="@+id/content_main"
    android:layout_width="@dimen/screen_width"
    android:layout_height="match_parent"
    android:background="@drawable/app_operate_background">

    <ImageView
        android:id="@+id/vendor_logo"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:src="@drawable/hyfai_logo"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp" />

    <include layout="@layout/state_layout"/>

    <com.ider.launcherpackage.views.BaseImageView
        android:id="@+id/main_apps"
        style="@style/MainItemStyle"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="15dp"
        android:layout_width="370dp"
        android:layout_height="523dp"
        android:background="@drawable/item_bg"
        android:tag="10"
        android:nextFocusRight="@+id/main_kodi"/>

    <com.ider.launcherpackage.views.BaseImageView
        android:id="@id/main_kodi"
        style="@style/MainItemStyle"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="307dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:package_name="org.xbmc.kodi"
        android:background="@drawable/item_bg"
        android:tag="11"/>

    <com.ider.launcherpackage.views.BaseImageView
        android:id="@+id/main_youtube"
        style="@style/MainItemStyle"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="529dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:tag="12"
        app:package_name="com.google.android.youtube"
        android:background="@drawable/item_bg"/>

    <com.ider.launcherpackage.views.BaseImageView
        android:id="@+id/main_file"
        style="@style/MainItemStyle"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="752dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:tag="13"
        app:package_name="com.droidlogic.FileBrower"
        android:background="@drawable/item_bg"/>
    <com.ider.launcherpackage.views.BaseImageView
        style="@style/MainItemStyle"
        android:id="@+id/main_face"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="974dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/item_bg"
        android:tag="14"

        app:package_name="com.facebook.katana"
        android:nextFocusRight="@+id/setting_display"/>
    <com.ider.launcherpackage.views.ShortcutFolder
        style="@style/MainItemStyle"
        android:id="@+id/folder14"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="974dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/item_bg"
        android:tag="14"
        android:visibility="gone"
        android:nextFocusRight="@+id/setting_display"/>
    <com.ider.launcherpackage.views.BaseImageView
        android:id="@+id/main_google"
        style="@style/MainItemStyle"
        android:layout_marginTop="362dp"
        android:layout_marginLeft="307dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:package_name="com.android.vending"
        android:background="@drawable/item_bg"
        android:tag="15"/>

    <com.ider.launcherpackage.views.BaseImageView
        android:id="@+id/main_media"
        style="@style/MainItemStyle"
        android:layout_marginTop="362dp"
        android:layout_marginLeft="752dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:package_name="com.netflix.mediaclient"
        android:background="@drawable/item_bg"
        android:tag="17"/>
    <com.ider.launcherpackage.views.BaseImageView
        android:id="@+id/main_setting"
        style="@style/MainItemStyle"
        android:layout_marginTop="362dp"
        android:layout_marginLeft="974dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:package_name="com.android.tv.settings"
        android:background="@drawable/item_bg"
        android:nextFocusRight="@+id/setting_apps"
        android:tag="18"/>

    <com.ider.launcherpackage.views.BaseImageView
        android:id="@+id/main_store"
        style="@style/MainItemStyle"
        android:layout_marginTop="362dp"
        android:layout_marginLeft="529dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:package_name="com.android.browser"
        android:background="@drawable/item_bg"
        android:tag="16"/>
    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="60dp"
        android:numColumns="9"
        android:listSelector="@drawable/grid_selecter"></GridView>
</FrameLayout>
