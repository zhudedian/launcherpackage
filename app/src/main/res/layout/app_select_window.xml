<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_operate_background">
    

    <LinearLayout
        android:layout_width="860dp"
        android:layout_height="500dp"
        android:background="@drawable/select_window_background"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textSize="30sp"
            android:textColor="#e9e4e4"
            android:gravity="center"
            android:text="@string/app_select_title"/>

        <GridView
            android:id="@+id/app_select_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:padding="20dp"
            android:numColumns="6"/>
    </LinearLayout>

</FrameLayout>