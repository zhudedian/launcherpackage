<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>

    <style name="FolderAnimation">
        <item name="android:windowEnterAnimation">@anim/folder_enter</item>
        <item name="android:windowExitAnimation">@anim/folder_exit</item>
    </style>

    <style name="ThumbnailStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="MainItemStyle">
        <item name="android:focusable">true</item>
    </style>

</resources>
